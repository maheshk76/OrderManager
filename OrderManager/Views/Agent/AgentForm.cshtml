@model OrderManager.ViewModels.AgentViewModel

@{
    ViewBag.Title = ViewBag.VTitle;
}

@using (Html.BeginForm("Save","Agent",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@ViewBag.VTitle - Agent</h4>
        <hr />
