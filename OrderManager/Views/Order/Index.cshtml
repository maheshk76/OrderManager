@model EmployeeWorkManager.ViewModels.FilterModel

@{
    ViewBag.Title = "Index";
}


<h2>Orders</h2>
<hr />
<div class="row container filters">
    <div class="row list-group">
        <div class="col-md-3">
            @Html.LabelFor(model => model.Sdate)
            @Html.TextBoxFor(model => model.Sdate, new { @max = DateTime.Now.Date.ToString("yyyy-MM-dd"), @placeholder = "SDate", @type = "date", @class = "form-control" })
        </div>
        <div class="col-md-3">
            @Html.LabelFor(model => model.Edate)
            @Html.TextBoxFor(model => model.Edate, new { @type = "date", @class = "form-control datepicker" })
        </div>
    </div>
    <div class="row list-group">
        <div class="col-md-4">
            @Html.EditorFor(model => model.Search, new { htmlAttributes = new { @placeholder = "Search", @class = "form-control" } })
        </div>
        <div class="col-md-2" style="float:right">
            @Html.DropDownListFor(model => model.CityId, new SelectList(Model.Cities, "Value", "Text"), "--Select City--", new { @class = "form-control" })
        </div>
        <div class="col-md-3" style="float:right">
            @Html.DropDownListFor(model => model.CustId, new SelectList(Model.Customers, "Value", "Text"), "--Select Customer--", new { @class = "form-control" })
        </div>
        
    </div>
    <div class="row list-group">
        <div class=" col-md-1">
            <input type="button" value="Search" class="btn btn-primary search-btn" />
        </div>

        <div class=" col-sm-1">
            <input type="button" value="Clear filters" class="btn btn-danger clear-btn" />
        </div>
        <div class=" col" >
            <div class="col-md-1 " style="float:right" >
                @Html.DropDownListFor(model => model.Pagesize, new SelectList(Model.RecordserPage, "Value", "Text"), new { @class = "form-control col-md-2"})
            </div>
        </div>
    </div>
</div>
<hr />
<div class="datadiv">
    @{Html.RenderAction("Orderlist", "Order", new
        {

            search = Model.Search,
            custId = Model.CustId,
            cityId = Model.CityId,
            sdate = Model.Sdate,
            edate = Model.Edate
        });
    }
</div>




